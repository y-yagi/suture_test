<p id="notice"><%= notice %></p>

<h1>Point Cards</h1>

<table>
  <thead>
    <tr>
      <th>Point</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @point_cards.each do |point_card| %>
      <tr>
        <td><%= point_card.point %></td>
        <td><%= point_card.user %></td>
        <td><%= link_to 'Show', point_card %></td>
        <td><%= link_to 'Edit', edit_point_card_path(point_card) %></td>
        <td><%= link_to 'Add', edit_point_card_add_path(point_card) %></td>
        <td><%= link_to 'Destroy', point_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Point Card', new_point_card_path %>
